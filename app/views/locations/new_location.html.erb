<%= form_tag(create_location_path, method: 'post') do %>
    <%= label_tag(:name, 'Name') %>
    <%= text_field_tag(:name) %>
    <br>
    <%= label_tag(:description, 'Description') %>
    <%= text_field_tag(:description) %>
    <br>
    <%= label_tag(:coordinates, 'Coordinates') %>
    <%= text_field_tag(:coordinates) %>
    <%= submit_tag('Submit') %>
<% end %>